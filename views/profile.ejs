<% include ./includes/header %>
<style>
  *{
    margin: 0%;
    padding: 0%;
    box-sizing: border-box;
  }
  #box{
      width: 100%;
      height: 100vh;
       background-color: rgb(205, 205, 205);
      
      /* display: flex;
      justify-content: center;
      align-items: center; */
      gap: 50px;
      padding: 30px 30px;
  }
  #imgbox{
    width: 8vw;
    height: 15vh;
   overflow: hidden;
   border-radius: 10px;
  }
  #imgbox>img{
    
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
  }
</style>

  <div id="box">
   
    <h1>Profile Page</h1>
    
    <hr>
    <%if(user.sellor){ %>
       <% if(user.address === "" || user.gstno === 0){ %>
          <div class="btn btn-danger d-flex align-items-center justify-content-between  mx-5">
            <h6  >Your Profile is not completed <a href="/verified" style="color: white;">click here</a> to verfied your account.</h6>
            <a href="/verified" class="btn btn-outline-dark">Verify Now.</a>
          </div>
       <% } else{ %>
          <div class="btn btn-success d-flex align-items-center justify-content-between  mx-5">
            <h6  >Congratulations !! ✨✨ You are now a verified sellor.</h6>
            <a href="/" class="btn btn-outline-light">Verified.</a>
          </div>
      <%  } %>
       
       
      
   <% } else { %>
   
    <div class="btn btn-warning d-flex align-items-center justify-content-between mx-5">
      <h6  >Your Profile is not completed <a href="/verified" style="color: white;">click here</a> to verfied your account.</h6>
      <a href="/verified" class="btn btn-outline-dark">Verify Now.</a>
    </div>
   

  <% }%>
    
    <div id="left " class="mt-5 mx-5 ">
      <div class="d-flex">
        <a href="">
          <div id='imgbox' class="mr-5"><img  src="https://static.vecteezy.com/system/resources/thumbnails/008/442/086/small/illustration-of-human-icon-user-symbol-icon-modern-design-on-blank-background-free-vector.jpg" alt=""></div>
        </a>
         <div id="details" style="margin-left: 2vw;" > 
          <h4><%= user.name %></h4>
          <h6><%=user.username %></h6>
          <a href=""  class="btn btn-warning mt-3">Edit Your Profile</a>
        </div>
      </div>
      <hr>
      <div class="container"> 

      </div>
    </div>
    <% if(user.sellor){ %>
    
      <div id="sellerbox" class="mx-5">
        <div id="productcreate" class="d-flex gap-4 mb-4">
          <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Create new Product.
          </button>
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">Create A New Product</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                  <form  method="post" action="/create/product" enctype="multipart/form-data">
                
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Product Name</label>
                      <input type="text" name="productname" class="form-control"  id="exampleInputEmail1" aria-describedby="emailHelp" >
                       </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Price</label>
                      <input type="text" name="price" class="form-control"  id="exampleInputEmail1" aria-describedby="emailHelp" >
                       </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Description</label>
                      <textarea type="text" name="desc" class="form-control"  id="exatextareaEmail1" aria-describedby="emailHelp" ></textarea>
                       </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Discount</label>
                      <input type="text" name="discount" class="form-control"  id="exampleInputEmail1" aria-describedby="emailHelp" >
                      </div>
                    <div class="mb-3">
                      <label for="exampleInputEmail1" class="form-label">Product Images</label>
                      <input type="file" name="image" class="form-control"  id="exampleInputEmail1" aria-describedby="emailHelp" >
                      </div>
                    <div class="mb-2">
                       <input type="file" name="image" class="form-control"  id="exampleInputEmail1" aria-describedby="emailHelp" >
                      </div>
                    <div class="mb-2">
                       <input type="file" name="image" class="form-control"  id="exampleInputEmail1" aria-describedby="emailHelp" >
                      </div>
                      <button type="submit" class="btn btn-primary">Submit</button>
         
                    </form>
                     
                    
              
                   
                      
                   
                
                </div>
                 <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="submit" class="btn btn-primary">Save changes</button>
                </div>
             
              </div>
            </div>
          </div>
          <a href="" class="btn btn-info">Show all Product</a>
        </div>
        <h2 class="d-flex align-items-center" >Your Product &nbsp; <a href="" class="btn btn-light "> &#x2197; </a> </h2>
        <hr>
        <div class="d-flex align-items-center gap-4">
          <% user.products.forEach(function(product){%>
            <a href="" class="text-decoration-none" style="color: black;" >
              <div class="card" style="width: 21rem; " >
                <div class="card-body">
                  <h5 class="card-title"><%= product.prodname %></h5>
                  <h6 class="card-subtitle mb-2 text-muted">Price - <%= product.price %>/- Rs</h6>
                  <p class="card-text mb-3"><%=product.desc %></p>
                  <a href="nm" class="card-link btn btn-primary">Update Product</a>
                  <a href="#" class="card-link btn-danger btn">Delete Product</a>
                </div>
              </div>
             </a>
            <% }) %>
            
           
         
          

           
           <a href="" class="btn btn-light mx-5">Show All Products <br></a>
        </div>
      </div>
    <%}else{ %>
      <div id="buyerbox" class="mx-5">
        <div id="productcreate" class="d-flex gap-4 mb-4">
          <a href="" class="btn btn-primary">Go To Cart &nbsp;<i class="ri-shopping-cart-2-line"></i></a>
          <a href="" class="btn btn-info">View Product</a>
        </div>
        <h2 class="d-flex align-items-center" >Wishlisted Product &nbsp; <a href="" class="btn btn-light "> ❤ </a> </h2>
        <hr>
        <div class="d-flex align-items-center gap-4">
          <a href="" class="text-decoration-none" style="color: black;" >
            <div class="card" style="width: 21rem; " >
              <div class="card-body">
                <h5 class="card-title">Card title</h5>
                <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6>
